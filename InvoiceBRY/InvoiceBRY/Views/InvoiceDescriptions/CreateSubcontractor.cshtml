@model InvoiceBRY.Models.InvoiceDescription

@{
    ViewData["Title"] = "Create";
}

<h1>Create Description</h1>

<h4>Invoice Description</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvoiceId" class="control-label"></label>
                <input asp-for="InvoiceId" class="form-control" />
                <span asp-validation-for="InvoiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" asp-route-subcontractorId="@ViewData["subcontractorId"]" asp-route-name="@ViewData["name"]" asp-route-HST="@ViewData["HST"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SubcontractorIndex" asp-route-invoiceId="@ViewData["invoiceId"]" asp-route-subcontractorId="@ViewData["subcontractorId"]" asp-route-name="@ViewData["name"]" asp-route-HST="@ViewData["HST"]">Back to Descriptions</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
