@model InvoiceBRY.Models.InvoiceDescription

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>InvoiceDescription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DescriptionId" />
            <div class="form-group">
                <input hidden asp-for="InvoiceId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" asp-route-customerId="@ViewData["customerId"]" asp-route-name="@ViewData["name"]" asp-route-HST="@ViewData["HST"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CustomerIndex" asp-route-invoiceId="@ViewData["invoiceId"]" asp-route-name="@ViewData["name"]" asp-route-customerId="@ViewData["customerId"]" asp-route-HST="@ViewData["HST"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
